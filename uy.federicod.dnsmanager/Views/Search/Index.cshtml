@using uy.federicod.dnsmanager.logic.Models
@model SearchModel
@{
    ViewData["Title"] = "Search domain";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Choose a subdomain to register:</h5>

                    <form asp-action="Index" asp-controller="Search">
                        <div class="row mb-3">
                            <label asp-for="Domain" for="domain" class="col-sm-4 col-form-label">
                                Your requested subdomain:
                            </label>
                            <div class="col-sm-8">
                                <input asp-for="Domain" type="text" name="domain" id="domain" class="form-control" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label name="Available" for="Available" class="col-sm-4 col-form-label">Available domains:</label>
                            <div class="col-sm-8">
                                <ul class="list-group">
                                    @foreach (KeyValuePair<string, string> item in ViewBag.allzones)
                                    {
                                        <li class="list-group-item">@item.Key</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="Search" />
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>







