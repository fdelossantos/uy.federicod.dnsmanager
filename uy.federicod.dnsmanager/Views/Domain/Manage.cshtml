@using uy.federicod.dnsmanager.logic.Models
@model DomainModel
@{
    ViewData["Title"] = "Manage Domain";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-6">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@(Model.DomainName).@Model.ZoneName</h5>
                    @if(Model.DelegationType == "Hosted")
                    {
                        
                    }


                    @if (Model.DelegationType == "Delegated")
                    {
                        <div class="row mb-3">
                        <ul class="list-group">
                            <li class="list-group-item active" aria-current="true">Your domain is Delegated on these Name Servers:</li>
                            @foreach(var ns in Model.NameServers)
                            {
                                    <li class="list-group-item">@ns <a asp-controller="Record" asp-action="Remove" asp-route-ns="@ns" asp-route-domain="@Model.DomainName" asp-route-zone="@Model.ZoneName" class="btn btn-danger">Remove</a> (Not yet implemented)</li>
                            }
                        </ul>
                        </div>
                        <form asp-action="Add" asp-controller="Record">
                            <input type="hidden" value="@Model.ZoneName" name="ZoneName" />
                            <input type="hidden" value="@Model.DomainName" name="DomainName" />
                            
                            <div class="row mb-3">
                                <label for="inputText" class="col-sm-2 col-form-label">Add new</label>
                                <div class="col-sm-8">
                                    <input type="text" id="nameserver" name="nameserver" class="form-control" />
                                </div>
                                <div class="col-sm-2">
                                    <input type="submit" value="Add" class="btn btn-primary" /> <p>(Not yet implemented)</p>
                                </div>
                            </div>
                            
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</section>