@model uy.federicod.dnsmanager.logic.Models.SearchModel
@{
    ViewData["Title"] = "Register domain";

}
<h1>Register domain</h1>

<p>Please accept the Terms and Conditions</p>
<div>This service is provided as-is to active students in Universidad ORT Uruguay.</div>

@if (!string.IsNullOrEmpty(ViewBag.Message)){
    <p style="color: red">@ViewBag.Message</p>
}

<form asp-action="Register" asp-controller="Domain">
    <select id="DelegationType" name="DelegationType">
        <option value="Hosted">Hosted</option>
        <option value="Delegated">Delegated</option>
    </select>
    <p>If you selected Hosted</p>
    <label>IP Address:</label>
    <input type="text" name="IPAddress" id="IPAddress" />
    <p>If you selected delegated</p>
    <label>List of Name Servers:</label>
    <textarea id="nameservers" name="nameservers"></textarea>
    <input type="hidden" name="domainname" id="domainname" value="@Model.Domain" />
    <p>Domain: <strong>@Model.Domain</strong><strong>.@Model.ZoneName</strong></p>
    <input type="submit" value="Accept" name="Accept" id="Accept" />
</form>