@using uy.federicod.dnsmanager.logic.Models
@model DomainModel
@{
    ViewData["Title"] = "Edit Domain";
}
<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@(Model.DomainName).@Model.ZoneName</h5>
                    <p>This action will permanently REMOVE your registration and all its resource records.</p>
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@Model.ZoneName" name="zonename" />
                        <input type="hidden" value="@Model.DomainName" name="id" />
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>